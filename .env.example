# Privacy Analyzer Environment Variables

# API Keys
ANTHROPIC_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Configuration
CONFIG_FILE=config/config.yaml

# Database (future feature)
# DATABASE_URL=postgresql://user:pass@localhost:5432/privacy_db

# Web Scanning
WEB_USER_AGENT=PrivacyAnalyzer/1.0
WEB_TIMEOUT=10
WEB_MAX_PAGES=10

# Processing
MAX_WORKERS=4
CONFIDENCE_THRESHOLD=0.6

# OCR
OCR_ENABLED=true
OCR_LANGUAGE=eng

# LLM
LLM_ENABLED=false
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_MAX_TOKENS=4000

# Security
ENABLE_PII_REDACTION=true
